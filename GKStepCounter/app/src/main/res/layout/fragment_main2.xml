<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kamensek.gasper.gkstepcounter.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/tbStKorakov1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/tbStKorakov"
        android:text="0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="34dp"
        android:text="Reset Steps:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        android:text="All Time Steps:" />

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="34dp"
        android:text="Steps:" />

    <TextView
        android:id="@+id/tbStKorakov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tbStKorakov2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/tbStKorakov1"
        android:text="0"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/tbInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbStKorakov2"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="5" />

    <Button
        android:id="@+id/btnPricni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:text="Start" />

    <Button
        android:id="@+id/btnReset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tbStKorakov1"
        android:layout_alignStart="@+id/btnPricni"
        android:text="Reset" />

    <Button
        android:id="@+id/btnReset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnReset1"
        android:layout_alignTop="@+id/tbStKorakov2"
        android:text="Reset" />

</RelativeLayout>
